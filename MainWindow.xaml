<Window x:Class="SaveReminderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveReminderWPF"
        mc:Ignorable="d"
        Title="设置时间间隔" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow" Width="210" Height="70">
    <StackPanel Orientation="Horizontal" >
        <TextBlock Text="请输入时间间隔(分钟)：" VerticalAlignment="Center"/>
        <TextBox x:Name="IntervalText" Width="40" Height="20"/>
        <Button x:Name="IntervalSetButton" Content="设置" Margin="2,0,0,0" Height="20" Click="IntervalSetButton_Click"/>
    </StackPanel>
</Window>
